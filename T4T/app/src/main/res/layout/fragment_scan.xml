<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.djdonahu.t4t.ScanActivity$PlaceholderFragment">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_image"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:src="@drawable/coca_cola" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Coca-Cola 12 Pack 12 FL OZ Cans"
        android:id="@+id/item_name"
        android:layout_below="@+id/item_image"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Purchased, Continue Scanning"
        android:id="@+id/purchased_button"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/item_name"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nope, Try Again"
        android:id="@+id/nope_button"
        android:layout_below="@+id/purchased_button"
        android:layout_alignLeft="@+id/purchased_button"
        android:layout_alignStart="@+id/purchased_button"
        android:layout_alignRight="@+id/purchased_button"
        android:layout_alignEnd="@+id/purchased_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Scanning"
        android:id="@+id/cancel_button"
        android:layout_below="@+id/nope_button"
        android:layout_alignLeft="@+id/purchased_button"
        android:layout_alignStart="@+id/purchased_button"
        android:layout_alignRight="@+id/purchased_button"
        android:layout_alignEnd="@+id/purchased_button" />



</RelativeLayout>
