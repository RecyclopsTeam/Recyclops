<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/product_item_layout"
    android:background="#ff59b6c2">
    <TextView
        android:id="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:layout_alignBottom="@+id/product_button"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:text="Temp txt"
        android:layout_alignTop="@+id/product_button"
        android:layout_alignRight="@+id/product_button"
        android:layout_alignParentBottom="false"
        android:gravity="center_vertical"
        style="@style/info_text"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View"
        android:id="@+id/product_button"
        android:background="@drawable/red_button"
        style="@style/button_text"
        android:textSize="16dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="32dp" />

</RelativeLayout>
